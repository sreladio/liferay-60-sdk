		long groupId = themeDisplay.getScopeGroupId();
		List<USMember> tempResults;
		
		try {
			;//tempResults = USMemberLocalServiceUtil.getgetAllProducts(groupId);
		}
		catch (SystemException ex) {
			tempResults = Collections.EMPTY_LIST;
		}
		
		return tempResults;
	}
}
